<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_search_hear_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/lishi"
            />
        <TextView
            android:id="@+id/txt_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:layout_weight="1"
            android:textColor="@color/txt_969696"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/iv_search_hear_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@mipmap/shanchu_gray"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lin_e6e6e6"
        />

</LinearLayout>